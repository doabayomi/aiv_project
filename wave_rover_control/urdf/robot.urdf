<?xml version="1.0"?>
<robot name="wave_rover">

  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <geometry>
        <mesh filename="file:$(find wave_rover_control)/meshes/WAVE ROVER_MODEL_STL.stl"/>
      </geometry>
      <material name="BlackMetal">
        <color rgba="0 0 0 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <mesh filename="file:$(find wave_rover_control)/meshes/WAVE ROVER_MODEL_STL.stl"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>

</robot>
